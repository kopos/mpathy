<h1>New campaign</h1>
<%= error_messages_for :campaign %>

<% form_for(@campaign) do |f| %>
  <table class="two-columns">
    <tr>
      <th>Name</th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>Code</th>
      <td><%= f.text_field :code %></td>
    </tr>
    <tr>
      <th>Notes</th>
      <td><%= f.text_area :notes, :rows => 5, :columns => 60 %></td>
    </tr>
    <tr>
      <th>Status</th>
      <td>
        <%= select_tag "campaign[status]", options_for_select(Campaign.statuses, :active) %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "Create", :class => 'flat-btn'  %></td>
    </tr>
  </table>
<% end %>
